# Core
SEED_JSON_URL=
CITY_DEFAULT=Pittsburgh, PA

# Firecrawl (web extraction)
FIRECRAWL_URL=
FIRECRAWL_API_KEY=

# Apify (FB/IG)
# Recommended:
# - APIFY_MODE=sync-dataset (returns dataset items directly)
# - Limit posts to reduce credits: default 4; override per provider or truck
APIFY_TOKEN=

# Actors (override if using custom actors)
APIFY_ACTOR_FB_EVENTS=apify/facebook-events-scraper
APIFY_ACTOR_FB_PAGES=apify/facebook-pages-scraper
APIFY_ACTOR_FB_POSTS=apify/facebook-posts-scraper
APIFY_ACTOR_IG_SCRAPER=apify/instagram-scraper

# Execution mode: sync-dataset | sync | async
APIFY_MODE=sync-dataset

# Optional: JSON to merge into actor input (e.g., {"language":"en"})
APIFY_EXTRA_INPUT=

# Post limits (actor-side only; we do not truncate client-side)
APIFY_DEFAULT_MAX_POSTS=4
APIFY_FB_MAX_POSTS=
APIFY_IG_MAX_POSTS=
# Per-truck overrides as JSON map: {"Blue Sparrow":6,"Pittsburgh Smokehouse":2}
APIFY_POST_LIMITS=

# Supabase (REST writes)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional LLM parsing for captions
USE_LLM=false
OPENAI_API_KEY=

